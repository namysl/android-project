<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.collections.CollectionsFragment">

    <ImageView
        android:id="@+id/imageView_accessory"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_hanger"
        app:layout_constraintEnd_toStartOf="@+id/imageView_shoes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_top" />

    <ImageView
        android:id="@+id/imageView_top"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_hanger"
        app:layout_constraintEnd_toStartOf="@+id/imageView_bot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_bot"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_hanger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_shoes"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_hanger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_bot" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:drawableRight="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/button_previous"
        app:layout_constraintTop_toBottomOf="@+id/imageView_shoes" />

    <Button
        android:id="@+id/button_previous"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_accessory" />

    <Button
        android:id="@+id/button_delete_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_collection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toEndOf="@+id/button_previous"
        app:layout_constraintTop_toBottomOf="@+id/imageView_shoes"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
